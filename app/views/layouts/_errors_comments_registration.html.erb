<% if @comment.errors.any? %>
    <div class="alert alert-danger" role="alert">
      The form contains <%= pluralize(@comment.errors.count, "error") %>.
      <ul>
          <% @comment.errors.full_messages.each do |msg| %>
          <li> <%= msg %> </li>
      <% end %>
    </ul>
    </div>
<% end %>