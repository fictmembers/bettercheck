<% provide(:title, "New comment") %>
<%= render "layouts/header" %>

<div class="row">
	<div class="col-xs-12  col-sm-8 col-sm-offset-2 col-md-6 col-md-offset-3 col-lg-4 col-lg-offset-4">
		<div class="well well-sm">
			<p><h4>New comment</h4></p>
			    <%= form_for @comment do |f| %>
      	  <%= render 'layouts/errors_comments_registration' %>

          <p><%= f.text_field :score,   class: "form-control", placeholder: "Score"%>    </p>   
          <p><%= f.text_area  :comment, class: "form-control", placeholder: "Comment"%>  </p>  

          <p>
            <div class="input-group">      <%= f.submit "Add", class: "btn btn-large btn-primary" %></div>
          </p>
      </div>
    <% end %>
		</div>
	</div>
</div>